<Window x:Class="WpfProject.CompititionStatistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject"
        mc:Ignorable="d"
        Title="CompititionStatistics" Height="250" Width="400">
    <Window.DataContext>
        <local:CompititionDataContext/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <Label DockPanel.Dock="Top" Content="Teams" Style="{DynamicResource StatsLabel}"/>
            <ListView Margin="10" ItemsSource="{Binding Teams}"/>
        </DockPanel>
        <DockPanel Grid.Column="1">
            <Label DockPanel.Dock="Top" Content="Compitition Info" Style="{DynamicResource StatsLabel}"/>
            <ListView Margin="10" ItemsSource="{Binding CompititionInfo}"/>
        </DockPanel>
    </Grid>
</Window>
